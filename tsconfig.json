{
  "compilerOptions": {
    "composite": true,
    "target": "es2017",
    "stripInternal": true,
    "strict": true,
    "module": "CommonJS",
    "outDir": "dist/commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": [],
    "sourceRoot": ".",
    "rootDir": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true
  },

  "include": ["src"]
}
